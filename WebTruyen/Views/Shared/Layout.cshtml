*@
    $(document).ready(function () {
        // Kiểm tra trạng thái ban đầu của chủ đề tối từ localStorage
        const isDarkMode = localStorage.getItem('darkMode') === 'enabled';

        // Áp dụng trạng thái chủ đề tối ban đầu
        toggleDarkMode(isDarkMode);

        // Xử lý sự kiện nhấn nút chuyển đổi chủ đề tối
        $('.theme_mode').on('change', function () {
            const isDarkModeEnabled = $(this).prop('checked');
            toggleDarkMode(isDarkModeEnabled);
        });

        // Hàm chuyển đổi chủ đề tối
        function toggleDarkMode(enabled) {
            // Cập nhật trạng thái checkbox
            $('.theme_mode').prop('checked', enabled);

            // Cập nhật lớp của body
            if (enabled) {
                $('body').addClass('dark-mode');
            } else {
                $('body').removeClass('dark-mode');
            }

            // Lưu trạng thái chủ đề tối vào localStorage
            localStorage.setItem('darkMode', enabled ? 'enabled' : 'disabled');
        }
    });

</script>
