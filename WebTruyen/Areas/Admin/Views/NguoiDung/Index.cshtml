@using WebTruyen.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WebTruyen.Models.NguoiDung>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
    <h2>Quản lý tài khoản người dùng</h2>

    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
    <table class="table">
        <tr>
            <th>
                Tên người dùng
            </th>
            <th>
                Địa chỉ
            </th>
            <th>
               Email
            </th>
            <th>
                Số điện thoại
            </th>
            <th>
                Mật khẩu
            </th>
            <th>
                Quyền truy cập
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Ten)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DiaChi)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SDT)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MatKhau)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.QuyenTruyCap)
                </td>
                <td>
                    <a href="@Url.Action("Edit", new { id = item.MaNguoiDung })" class="btn btn-warning" role="button">Sửa</a>

                    <a href="@Url.Action("Details", new { id = item.MaNguoiDung })" class="btn btn-primary" role="button">Chi tiết</a>

                    <a href="@Url.Action("Delete", new { id = item.MaNguoiDung })" class="btn btn-danger" role="button">Xóa</a>
                </td>
            </tr>
        }

    </table>

    <div>
        Trang @(Model.PageCount < Model.PageNumber ? 0 :Model.PageNumber)/@Model.PageCount
        <div class="MenuTrang">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
        </div>
    </div>
    <style>
        .MenuTrang {
            display: inline;
            text-align: center;
        }
    </style>