

@using WebTruyen.Models
@using PagedList.Mvc;
@model PagedList.PagedList<WebTruyen.Models.ChiTietDonHang>

@{ ViewBag.Title = "Index";
                Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml"; }
<h2>Quản lý tài khoản người dùng</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>

        <th>
            Mã Chi tiết đơn hàng
        </th>
        <th>
            Mã đơn hàng
        </th>
        <th>
           Mã Truyện
        </th>
        <th>
            Giá
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>
        @Html.DisplayFor(modelItem => item.MaCTDonHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaDonHang)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.MaTruyen)
    </td>
    <td>
        @Html.DisplayFor(modelItem => item.DonHang.TongTien)
    </td>

</tr>}

</table>

<div>
    Trang @(Model.PageCount < Model.PageNumber ? 0 :Model.PageNumber)/@Model.PageCount
    <div class="MenuTrang">
        @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }))
    </div>
</div>
<style>
    .MenuTrang {
        display: inline;
        text-align: center;
    }
</style>
