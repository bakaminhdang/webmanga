@model WebTruyen.Models.Truyen

@{
    ViewBag.Title = "Create";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container">
    <script src="~/ckeditor/ckeditor.js"></script>
    <br />
    <h2>Thêm truyện</h2>

    @using (Html.BeginForm("Create", "Truyen", FormMethod.Post, new
    {
        @enctype = "multipart/form-data"
    }))
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Tên truyện:</label>
                <div class="col-md-10">
                    <input type="text" name="TenTruyen" value="@ViewBag.TenTruyen" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Tác giả:</label>
                <div class="col-md-10">
                    <input type="text" name="TacGia" value="@ViewBag.TacGia" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Mô tả:</label>
                <div class="col-md-10">
                    <textarea name="MoTa" id="mota">@ViewBag.MoTa</textarea>
                    <script>CKEDITOR.replace('mota');</script>
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Trạng thái:</label>
                <div class="col-md-10">
                    <input type="text" name="TrangThai" value="@ViewBag.TrangThai" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Mã thể loại:</label>
                <div class="col-md-10">
                    @Html.DropDownList("MaTheLoai")
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Ngày xuất bản:</label>
                <div class="col-md-10">
                    <input type="date" name="NgayXuatBan" required />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Hình:</label>
                <div class="col-md-10">
                    <input type="file" name="fFileUpload" />
                    @ViewBag.ThongBao
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số lượt xem:</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="SoLuotXem"
                           value="@ViewBag.SoLuotXem" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Điểm đánh giá:</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="DiemDanhGia"
                           value="@ViewBag.DiemDanhGia" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Giá truyện:</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="GiaTruyen"
                           value="@ViewBag.GiaTruyen" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số lượng tồn:</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="SoLuongTon"
                           value="@ViewBag.SoLuongTon" />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Số lượng bán:</label>
                <div class="col-md-10">
                    <input type="number" min="1" required name="SoLuongBan"
                           value="@ViewBag.SoLuongBan" />
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Thêm truyện" class="btn btn-default" />
                </div>
            </div>
            <br />
        </div>
    }

    <div>
        @Html.ActionLink("Quay về trang quản lý truyện", "Index")
    </div>
</div>