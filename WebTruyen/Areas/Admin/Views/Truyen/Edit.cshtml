@model WebTruyen.Models.Truyen

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<script src="~/ckeditor/ckeditor.js"></script>
<div class="container">
<h2>Sửa chi tiết truyện</h2>

@using (Html.BeginForm("Edit", "Truyen", FormMethod.Post, new
{
    @enctype =
"multipart/form-data"
}))
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>Truyen</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

    <div class="form-group">
        <label class="control-label col-md-2">Mã truyện:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="MaTruyen" value="@Model.MaTruyen" readonly />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Tên truyện:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="TenTruyen" value="@Model.TenTruyen" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Tác giá:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="TacGia" value="@Model.TacGia" required />
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-md-2">Mô tả:</label>
        <div class="col-md-10">
            <textarea name="MoTa" id="mota">@Model.MoTa</textarea>
            <script>CKEDITOR.replace('mota');</script>
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Trạng thái:</label>
        <div class="col-md-10">
            <input type="text" size="70" name="TrangThai" value="@Model.TrangThai" required />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Thể loại:</label>
        <div class="col-md-10">
            @Html.DropDownList("MaTheLoai")
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ngày xuất bản:</label>
        <div class="col-md-10">
            <input type="datetime" name="NgayXuatBan" required
                   value="@Convert.ToDateTime(Model.NgayXuatBan)" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Ảnh bìa:</label>
        <div class="col-md-10">
            <input type="file" name="fFileUpload" />
            <img src="~/img/@Model.Hinh" width="120"> (Ảnh hiện tại)
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Số lượt xem:</label>
        <div class="col-md-10">
            <input type="number" min="1" required name="iSoLuotXem"
                   value="@Model.SoLuotXem" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Điểm đánh giá:</label>
        <div class="col-md-10">
            <input type="number" min="1" required name="iDiemDanhGia"
                   value="@Model.DiemDanhGia" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Giá truyện:</label>
        <div class="col-md-10">
            <input type="number" min="1" required name="iGiaTruyen" value="@Model.GiaTruyen" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Số lượng tồn:</label>
        <div class="col-md-10">
            <input type="number" min="0" required name="iSoLuongTon"
                   value="@Model.SoLuongTon" />
        </div>
    </div>

    <div class="form-group">
        <label class="control-label col-md-2">Số lượng bán:</label>
        <div class="col-md-10">
            <input type="number" min="0" required name="iSoLuongBan"
                   value="@Model.SoLuongBan" />
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
        </div>
    </div>
</div>
}

<div>
    <br />
    @Html.ActionLink("VỀ TRANG QUẢN LÝ TRUYỆN", "Index")
</div>
</div>