<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <link rel="apple-touch-icon" sizes="76x76" href="~/assets/img/apple-icon.png">
    <link rel="icon" type="image/png" sizes="96x96" href="~/assets/img/favicon.png">

    <title>Paper Dashboard by Creative Tim</title>

    <meta content='width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=0' name='viewport' />
    <meta name="viewport" content="width=device-width" />


    <!-- Bootstrap core CSS     -->
    <link href="~/assets/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Animation library for notifications   -->
    <link href="~/assets/css/animate.min.css" rel="stylesheet" />

    <!--  Paper Dashboard core CSS    -->
    <link href="~/assets/css/paper-dashboard.css" rel="stylesheet" />


    <!--  CSS for Demo Purpose, don't include it in your project     -->
    <link href="~/assets/css/demo.css" rel="stylesheet" />


    <!--  Fonts and icons     -->
    <link href="http://maxcdn.bootstrapcdn.com/font-awesome/latest/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Muli:400,300" rel="stylesheet" type="text/css">
    <link href="~/assets/css/themify-icons.css" rel="stylesheet">
    <!--   Core JS Files   -->

</head>
<body>

    <div class="wrapper">
        <div class="sidebar" data-background-color="white" data-active-color="danger">

            <div class="sidebar-wrapper">
                <div class="logo">
                    <a href="@Url.Action("Index","Home")" class="simple-text">
                        Quản lý
                    </a>
                </div>

                <ul class="nav">
                    <li>
                        <a href="@Url.Action("Index","Truyen")">
                            <i class="ti-panel"></i>
                            <p>Quản lý truyện</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","TheLoai")">
                            <i class="ti-view-list-alt"></i>
                            <p>Quản lý thể loại</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","Chuong")">
                            <i class="ti-text"></i>
                            <p>Quản lý chương truyện</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","NguoiDung")">
                            <i class="ti-user"></i>
                            <p>Quản lý người dùng</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","BinhLuan")">
                            <i class="ti-pencil-alt2"></i>
                            <p>Quản lý bình luận</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","DonHang")">
                            <i class="ti-pencil-alt2"></i>
                            <p>Xem Đơn Hàng</p>
                        </a>
                    </li>
                    <li>
                        <a href="@Url.Action("Index","ChiTietDH")">
                            <i class="ti-pencil-alt2"></i>
                            <p>Xem Chi tiết đơn hàng</p>
                        </a>
                    </li>


                </ul>
            </div>
        </div>

        <div class="main-panel">
            <nav class="navbar navbar-default">
                <div class="container-fluid">
                    <div class="navbar-header">
                        <button type="button" class="navbar-toggle">
                            <span class="sr-only">Toggle navigation</span>
                            <span class="icon-bar bar1"></span>
                            <span class="icon-bar bar2"></span>
                            <span class="icon-bar bar3"></span>
                        </button>
                        <a class="navbar-brand" href="@Url.Action("Index","Home")">Admin</a>
                    </div>
                    <div class="collapse navbar-collapse">
                        @if (Session["Admin"] != null)
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <a>
                                        <i class="ti-user"></i>
                                        <p>Wellcome: @Session["HoTen"].ToString()</p>
                                    </a>
                                </li>

                                <li>
                                    <a href="@Url.Action("DangXuat","Home")">
                                        <p>Logout</p>
                                    </a>
                                </li>
                            </ul>
                        }
                        else
                        {
                            <ul class="nav navbar-nav navbar-right">
                                <li>
                                    <a href="@Url.Action("Login","Home")">
                                        <i class="ti-user"></i>
                                        <p>Login</p>
                                    </a>
                                </li>

                              
                            </ul>
                        }
                    </div>
                </div>
            </nav>


            <div class="content">
                <div class="container" style="background-color:white;border-radius:15px">
                    @RenderBody()
                    </div>
                </div>


                <footer class="footer">
                    <div class="container-fluid">
                        <nav class="pull-left">
                            <ul>

                                <li>
                                    <a href="@Url.Action("Login","Home")">
                                        Admin
                                    </a>
                                </li>

                            </ul>
                        </nav>
                        <div class="copyright pull-right">
                            &copy;
                            <script>document.write(new Date().getFullYear())</script>, made with <i class="fa fa-heart heart"></i> by <a href="#">tam</a>
                        </div>
                    </div>
                </footer>

            </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.0/dist/js/bootstrap.min.js"></script>
    @Styles.Render("~/Content/PagedList.css")
   
</body>

</html>
