@model WebTruyen.Models.TheLoai

@{
    ViewBag.Title = "Edit";
    Layout = "~/Areas/Admin/Views/Shared/LayoutAdmin.cshtml";
}
<div class="container">
    <hr />
    <h2>Sửa</h2>

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <label class="control-label col-md-2">Mã chủ đề:</label>
                <div class="col-md-10">
                    @*Chỉ hiển thị mã sách không cho sửa*@
                    <input type="text" size="70" name="iMaTL" value="@Model.MaTheLoai" readonly />
                </div>
            </div>

            <div class="form-group">
                <label class="control-label col-md-2">Tên Chủ Đề:</label>
                <div class="col-md-10">

                    <input type="text" size="70" name="sTenTheLoai" value="@Model.TenTheLoai" required />
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="LƯU THÔNG TIN" class="btn btn-default" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Back to List", "Index")
    </div>
</div>